@model ProductViewModel

<main class="mt-3 mb-5">
    <h1 class="text-center">Create Product</h1>
    <hr class="hr-2 bg-dark" />
    <form class="mx-auto half-width" method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Name..." />
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" type="number" class="form-control" placeholder="Price..." />
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Description..."></textarea>
        </div>
        <h4 class="text-center">Product Type</h4>
        <hr class="hr-2 bg-dark mt-2" />
        <div class="product-type-holder mt-4 d-flex justify-content-around">
            @{
                string[] list = { "Food", "Domestic", "Health", "Cosmetic" };
                foreach (var item in list)
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="PType" value="@item">
                        <label class="form-check-label" asp-for="PType">@item</label>
                    </div>
                }
            }
        </div>
        <hr class="hr-2 bg-dark mt-2" />
        <div class="button-holder mt-2 d-flex justify-content-center">
            <input type="submit" class="btn danger text-black" value="Create" />
        </div>
    </form>
</main>
<footer>
    <div class="container-fluid chushka-bg-color">
